bind diff    V !git difftool HEAD %(file)

bind log     C ?git checkout %(branch)
bind log     ! ?git reset --hard %(commit)
bind log     V !git difftool HEAD %(file)

bind main	   C ?git cherry-pick %(commit)
bind main    P ?git pull origin %(branch)
bind main    M ?git merge %(branch) main
bind main    F ?git fetch origin %(branch)
bind main    V !git difftool HEAD %(file)

bind refs	   C ?git checkout %(branch)
bind refs    P ?git push -u origin %(branch)
bind refs    H ?gh pr create --base production --title "Merge %(branch)" --body "Merge %(branch)" -r hanielbaez
bind refs    N ?gh pr create --base production --title "Merge %(branch)" --body "Merge %(branch)" -r neiliux
bind refs    R ?gh pr create --base production --title "Merge %(branch)" --body "Merge %(branch)" -r Romain-MVR
bind refs    S ?gh pr create --base production --title "Merge %(branch)" --body "Merge %(branch)" -r senthil-arasu
bind refs    V ?gh pr create --base production --title "Merge %(branch)" --body "Merge %(branch)" -r gajdaw

bind status  P ?git push origin %(branch)
bind status  V !git difftool HEAD %(file)
bind status  A ?~/Setup/helpers/echo_all.sh

set vertical-split = yes
set line-graphics = utf-8
set mouse = true
